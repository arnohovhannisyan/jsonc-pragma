{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__mocks__", "src/**/*.test.ts"]
}
