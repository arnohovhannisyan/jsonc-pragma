{
	"name": "jsonc-pragma",
	"version": "1.0.5",
	"description": "A simple, yet powerful pragma analyzer and utility library for JSON with Comments",
	"main": "dist/main.js",
	"source": "src/main.ts",
	"license": "MIT",
	"scripts": {
		"start": "microbundle watch --target node -f cjs",
		"build": "microbundle --target node --no-sourcemap --compress -f cjs && yarn types",
		"types": "tsc -p . -m amd -d --out types/main.js && shx cp types/main.d.ts dist && shx rm -rf types && node scripts/postprocess.js",
		"lint": "xo 'src/**/*'",
		"test": "jest"
	},
	"dependencies": {
		"match-bracket": "^1.0.0"
	},
	"devDependencies": {
		"@types/jest": "^25.1.4",
		"@types/node": "^13.9.0",
		"codecov": "^3.6.5",
		"jest": "^25.1.0",
		"microbundle": "^0.12.0-next.7",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.1",
		"typescript": "^3.8.3",
		"xo": "^0.28.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arnohovhannisyan/jsonc-pragma"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^~/(.*)": "<rootDir>/src/$1"
		}
	},
	"xo": {
		"prettier": true,
		"rules": {
			"unicorn/filename-case": 0,
			"no-undef": 0,
			"@typescript-eslint/explicit-function-return-type": 0,
			"@typescript-eslint/return-await": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"@typescript-eslint/restrict-plus-operands": 0,
			"no-implicit-coercion": 0,
			"promise/param-names": 0,
			"no-inner-declarations": 0,
			"import/extensions": 0
		}
	}
}
